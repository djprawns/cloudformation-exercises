{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "TopicName": {
            "Type": "String",
            "Description": "Topic Name",
            "Default": "my-topic"
        }
    },
    "Resources": {
        "S3Bucket": {
            "Type": "AWS::S3::Bucket"
        },
        "MySNSTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "Subscription": [
                    {
                        "Endpoint": "pranavsharma.sre@gmail.com",
                        "Protocol": "email"
                    }
                ],
                "TopicName": {
                    "Ref": "TopicName"
                }
            }
        }
    },
    "Outputs": {
        "BucketName": {
            "Value": {
                "Ref": "S3Bucket"
            },
            "Description": "Name of the sample Amazon S3 bucket."
        },
        "MyTopicArn": {
            "Description": "Arn of Created SNS Topic",
            "Value": {
                "Ref": "MySNSTopic"
            }
        }
    }
}